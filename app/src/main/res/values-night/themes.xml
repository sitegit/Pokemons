<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokemons" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Pokemons" parent="Base.Theme.Pokemons" >
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:editTextColor">@color/teal_700</item>
        <item name="android:textColorHint">@color/teal_200</item>
    </style>

</resources>