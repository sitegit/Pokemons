<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ConstraintCardStyle">
        <item name="android:background">@drawable/constraint_card_background</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="ProgressBarStatStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackColor">@color/grey</item>
        <item name="trackThickness">34dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="trackCornerRadius">20dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="ProgressBarStatStyleLand" parent="ProgressBarStatStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="layout_constraintEnd_toStartOf">@+id/line</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewLabelStyle" parent="BaseTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="TextViewPokemonDetailTitle" parent="BaseTextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPokemonTypeLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>

